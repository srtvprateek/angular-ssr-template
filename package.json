{
  "name": "angular-ssr-template",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "clean": "rm -rf ./dist && rm -rf ./functions/dist",
    "dev:ssr": "ng run angular-ssr-template:serve-ssr",
    "serve:ssr": "node dist/angular-ssr-template/server/main.js",
    "build:ssr": "npm run clean && ng build && ng run angular-ssr-template:server",
    "prerender": "ng run angular-ssr-template:prerender",
    "serve": "npm run build:ssr && node copy2firebase && cd functions && npm run serve",
    "deploy": "npm run build:ssr && node copy2firebase && cd functions && npm run deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/fire": "^16.0.0",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/platform-server": "^16.2.0",
    "@angular/router": "^16.2.0",
    "@nguniversal/express-engine": "^16.2.0",
    "express": "^4.15.2",
    "firebase": "^10.6.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.0",
    "@angular/cli": "~16.2.0",
    "@angular/compiler-cli": "^16.2.0",
    "@nguniversal/builders": "^16.2.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^16.11.7",
    "bufferutil": "^4.0.8",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.1.3",
    "utf-8-validate": "^5.0.10",
    "ws": "^8.14.2",
    "xhr2": "^0.2.1"
  }
}
